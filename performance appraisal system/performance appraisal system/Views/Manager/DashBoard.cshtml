<partial name="_navbarCommon" />



<div class="container">
    <div class="row">
        <div class="col-sm-6 border rounded-2 shadow-sm">
            
            <h4 class="mt-3">My Reviews</h4>
            
            <a class="btn btn-outline-secondary  mt-3" asp-action="AddAppraisel" asp-controller="Manager">Create New Appraisel</a>
     

        </div>
        
        <div class="col-sm-6 border rounded-2">
            
            <h4 class="mt-3">Views</h4>

            @if (TempData["success"] !=null)
            {
                <p class="text-success "><b>@TempData["success"]</b> </p>
            }
          
            @{
                if( ViewBag.NewStatus != null)
                {
                    @foreach (var i in ViewBag.NewStatus)
                    {
                        <p>You have created an Appraisal form for <b>Employee ID  @i.EmployeeID</b> Status is <b>@i.Status</b> on <b>@i.StartDate</b></p> <a class="text-info" asp-action="ChangeAppraisalStatus" asp-controller="Manager" asp-route-appid="@i.AID">Change Status As Created</a>

                        <hr />
                    }
                }
                else
                {
                    <p>You have not created any New appraisal form</p>
                }
            }
     

        </div>

    </div>
</div>