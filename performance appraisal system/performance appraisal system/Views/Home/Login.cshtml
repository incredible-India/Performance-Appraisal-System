@model login

@{
    ViewData["Title"] = "Home Page";
}

@section links{
    <link href="~/css/index.css" rel="stylesheet" />
   
}

<div class="bgI">
    <div class="containerw">

        <div class="img">
            <img src="~/images/logo.png" />
        </div>
        <div class="topnav">


            <a href="#home">Home</a>
            <a href="#news">News</a>
            <a href="#contact">Contact</a>
            <a href="#about">About</a>
        </div>

    </div>



</div>

<div class="container mx-auto">

    @{
        if(ViewBag.ErrorName != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorName</div>
        }
    }




<div class="wrapper fadeInDown">
  <div id="formContent">

            <form asp-action="Login" asp-controller="Home" method="post">
              <input  asp-for="email" id="login" class="fadeIn second"  placeholder="User Name" required>
              <br />
              <span asp-validation-for="email" class="text-danger"></span>

                <input asp-for="password" placeholder="Password" class="fadeIn third" required>
               <br />
               
                <span  asp-validation-for="password" class="text-danger"></span>

                <input type="submit" class="fadeIn fourth" value="Log In">
    </form>

    <!-- Remind Passowrd -->
    <div id="formFooter">
      <a class="underlineHover" href="#">Forgot Password?</a>
    </div>

  </div>
</div>

        
 </div>


